{
    "compilerOptions": {
        "target": "es6",
       // "module" : "es6", //'es2015
        "module": "CommonJS",
        "moduleResolution": "node",
        "isolatedModules": false,
      //  "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "outDir" : "gen_tsc",
       // "sourceMap" : true,
        "inlineSourceMap": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "typings/modules/debug/index.d.ts",
        "src/interfaces.d.ts",
        "src/match/ifmatch.ts",
        "src/constants.ts",
        "src/exec/exec.ts",
        "src/match/breakdown.ts",
        "src/match/dispatcher.ts",
        "src/match/inputFilterRules.ts",
        "src/match/inputFilter.ts",
        "src/match/matchdata.ts",
        "src/match/sentence.ts",
        "src/match/toolmatcher.ts",
        "src/utils/damerauLevenshtein.ts",
        "src/utils/utils.ts"
    ],
    "exclude": []
}